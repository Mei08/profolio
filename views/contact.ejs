<%- include partials/header.ejs %>
<!-- Page Header -->
    <header class="intro-header" style="background-image: url('/images/home-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                    
                        <h1>Contact Me</h1>
                        <hr class="small">
                        <span class="subheading">I will contact you as soon as i can.</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
<!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <form name="sentMessage" id="contactForm" aria-live="polite" novalidate>
                    <div class="row control-group" varia-relevant="text">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label>Name</label>
                            <input type="text" class="form-control" placeholder="Name" id="name" required data-validation-required-message="Please enter your name." aria-labelledby="name">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="row control-group" aria-relevant="text">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label>Email Address</label>
                            <input type="email" class="form-control" placeholder="Email Address" id="email" required data-validation-required-message="Please enter your email address." aria-labelledby="Email" aria-required="true" aria-invalid="false">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="row control-group" aria-relevant="text">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label>Message</label>
                            <textarea rows="5" class="form-control" placeholder="Message" id="message" required data-validation-required-message="Please enter a message."></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <button type="submit" role=button class="btn btn-default" aria-expanded="ture" aria-controls="send" aria-describedby="submitbtn">Send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

<%- include partials/footer.ejs %>